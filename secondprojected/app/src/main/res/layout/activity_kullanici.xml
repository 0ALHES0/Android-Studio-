<?xml version="1.0" encoding="utf-8"?>
 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/cikartmalar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KullaniciActivity"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_göster"
                        android:layout_width="match_parent"
                        android:layout_height="82dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="10dp"
                        android:backgroundTint="@color/lllll"
                        android:gravity="center"
                        android:text="Mevcut Kullanıcıları Göster" />

                </LinearLayout>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="33dp"
                        android:layout_height="75dp"
                        android:text="Ad"
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <EditText

                        android:id="@+id/editad"

                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-50dp"
                        android:background="@drawable/beyaz" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="179dp"
                        android:layout_height="75dp"
                        android:text="Soyad"
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <EditText

                        android:id="@+id/editsoyad"
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-50dp"
                        android:background="@drawable/beyaz" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="270dp"
                        android:layout_height="75dp"
                        android:text="Kullanıcı Adı"
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <EditText

                        android:id="@+id/editkullanici"

                        android:layout_height="match_parent"
                        android:layout_marginLeft="-50dp"
                        android:background="@drawable/beyaz" />

                </TableRow>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="159dp"
                        android:layout_height="65dp"
                        android:layout_marginTop="0dp"
                        android:text="Şifre"
                        android:textColor="#fff"
                        android:textSize="28dp" />

                    <EditText

                        android:id="@+id/editsifre"

                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="60dp"
                        android:background="@drawable/beyaz" />

                </LinearLayout>



                <TableRow
                    android:layout_width="5000dp"
                    android:layout_height="123dp"
                    android:layout_marginTop="40dp">

                    <TextView
                        android:id="@+id/g"
                        android:layout_width="269dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="28dp"
                        android:textStyle="bold" />


                </TableRow>

                <LinearLayout
                    android:layout_width="410dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_kaydet"
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        android:layout_gravity="left"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="20dp"
                        android:backgroundTint="@color/sarii"
                        android:text="Kaydet" />



                </LinearLayout>


            </TableLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>