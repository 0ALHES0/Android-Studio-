<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#BF8F8F"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnaSayfaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/dkkkkkk">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/dkkkkkk"
            android:orientation="vertical">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/b"
                android:layout_width="264dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/lllll"
                android:text="Envanter sayısını Göster"
                android:textSize="20dp"
                app:cornerRadius="50dp" />

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cc"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/raprolarkoyusu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:drawableLeft="@drawable/computer"
                    android:text="Bilgisayar sayısı"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/c"
                    android:layout_width="170dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/beyaz"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/ca"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:drawableLeft="@drawable/ic_baseline_print_24"
                    android:background="@drawable/raprolarkoyusu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Yazıcı sayısı"
                    android:textColor="#fff"
                    android:textSize="18dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/d"
                    android:layout_width="170dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/beyaz"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cf"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:drawableLeft="@drawable/ic_baseline_scanner_24"
                    android:background="@drawable/raprolarkoyusu"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Tarayıcı sayısı"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/e"
                    android:layout_width="170dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/beyaz"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cg"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/raprolarkoyusu"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_tablet_mac_24"
                    android:padding="10dp"
                    android:text="Tablet sayısı"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/f"
                    android:layout_width="170dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/beyaz"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp"

                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/cv"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/raprolarkoyusu"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_person_24"
                    android:padding="10dp"
                    android:text="Kullanıcı sayısı"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:textStyle="bold"

                    />

                <TextView
                    android:id="@+id/g"
                    android:layout_width="170dp"
                    android:layout_height="39dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/beyaz"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deneme"
                android:layout_width="264dp"
                android:layout_height="82dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/lllll"
                android:text="Grafiği Göster"
                android:textAllCaps="false"
                android:textSize="20dp"
                app:cornerRadius="50000dp" />

        </LinearLayout>
    </ScrollView>
    </RelativeLayout>