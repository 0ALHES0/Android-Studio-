<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/lin"

    android:background="@drawable/dkkkkkk"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Görmek İstediğiniz Envanter Listesi için aşağıdaki butonlara tıklayınız"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="@drawable/dikdortgen"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        />
    <Button
        android:layout_width="300dp"
        android:drawableLeft="@drawable/computer"
        android:layout_height="75dp"
        android:id="@+id/pc"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/sarii"
        app:cornerRadius="50dp"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Bilgisayar Listesi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:layout_width="300dp"
        android:id="@+id/yzc"
        android:drawableLeft="@drawable/ic_baseline_print_24"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/sarii"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="center"
        app:cornerRadius="50dp"
        android:gravity="center"
        android:text="Yazıcı Listesi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="300dp"
        android:id="@+id/tryc"
        android:drawableLeft="@drawable/ic_baseline_scanner_24"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/sarii"
        app:cornerRadius="50dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        android:text="Tarayıcı Listesi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <com.google.android.material.button.MaterialButton
        android:layout_width="300dp"
        android:id="@+id/tblt"
        app:cornerRadius="50dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:drawableLeft="@drawable/ic_baseline_tablet_mac_24"
        android:gravity="center"
        android:text="Tablet Listesi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/sarii"
        />

    <TextView
        android:background="@drawable/dikdortgen"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Envanter sayısı ve grafiği için aşağıdaki butona tıklayınız"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_gravity="center"
        />
    <Button
        android:layout_width="380dp"
        android:id="@+id/rprlr"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="75dp"
        android:layout_marginLeft="0dp"
        android:gravity="center"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/sarii"
        android:text="Envanter Sayı Raporları"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>
    </ScrollView>